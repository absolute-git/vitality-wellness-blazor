@page "/contact"

<PageTitle>Contact Us - Vitality Wellness Center</PageTitle>

<section class="page-header">
    <div class="container">
        <h1>Contact Us</h1>
        <p>Ready to start your wellness journey? Get in touch today.</p>
    </div>
</section>

<section class="contact-content">
    <div class="container">
        <div class="contact-grid">
            <div class="contact-form-wrapper">
                <h2>Book a Consultation</h2>
                <p class="form-intro">Fill out the form below and we'll get back to you within 24 hours to schedule your free consultation.</p>
                <EditForm Model="@contactModel" OnValidSubmit="HandleSubmit" class="contact-form">
                    <DataAnnotationsValidator />

                    <div class="form-row">
                        <div class="form-group">
                            <label for="name">Full Name</label>
                            <InputText id="name" @bind-Value="contactModel.Name" class="form-control" placeholder="Your name" />
                            <ValidationMessage For="@(() => contactModel.Name)" />
                        </div>

                        <div class="form-group">
                            <label for="phone">Phone Number</label>
                            <InputText id="phone" @bind-Value="contactModel.Phone" class="form-control" placeholder="(555) 123-4567" />
                            <ValidationMessage For="@(() => contactModel.Phone)" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <InputText id="email" @bind-Value="contactModel.Email" class="form-control" placeholder="your.email@example.com" />
                        <ValidationMessage For="@(() => contactModel.Email)" />
                    </div>

                    <div class="form-group">
                        <label for="service">Service of Interest</label>
                        <InputSelect id="service" @bind-Value="contactModel.Service" class="form-control">
                            <option value="">Select a service...</option>
                            <option value="physical-therapy">Physical Therapy</option>
                            <option value="personal-training">Personal Training</option>
                            <option value="massage">Massage Therapy</option>
                            <option value="yoga">Yoga & Pilates</option>
                            <option value="other">Other / General Inquiry</option>
                        </InputSelect>
                    </div>

                    <div class="form-group">
                        <label for="message">Tell us about your goals</label>
                        <InputTextArea id="message" @bind-Value="contactModel.Message" class="form-control" rows="4" placeholder="What would you like to achieve? Any injuries or conditions we should know about?" />
                        <ValidationMessage For="@(() => contactModel.Message)" />
                    </div>

                    <button type="submit" class="btn btn-primary btn-large">Request Consultation</button>
                </EditForm>

                @if (showSuccess)
                {
                    <div class="success-message">
                        <p>Thank you for reaching out! We'll contact you within 24 hours to schedule your free consultation.</p>
                    </div>
                }
            </div>

            <div class="contact-info">
                <h2>Visit Our Center</h2>

                <div class="info-item">
                    <div class="info-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                            <circle cx="12" cy="10" r="3"/>
                        </svg>
                    </div>
                    <div class="info-content">
                        <h3>Location</h3>
                        <p>123 Wellness Way<br/>Health City, HC 12345</p>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                        </svg>
                    </div>
                    <div class="info-content">
                        <h3>Phone</h3>
                        <p>(555) 123-4567</p>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                            <polyline points="22,6 12,13 2,6"/>
                        </svg>
                    </div>
                    <div class="info-content">
                        <h3>Email</h3>
                        <p>hello@vitalitywellness.com</p>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/>
                            <polyline points="12 6 12 12 16 14"/>
                        </svg>
                    </div>
                    <div class="info-content">
                        <h3>Hours</h3>
                        <p>Mon - Fri: 6:00 AM - 8:00 PM<br/>Saturday: 8:00 AM - 4:00 PM<br/>Sunday: Closed</p>
                    </div>
                </div>

                <div class="contact-cta">
                    <p>Prefer to call? Our friendly staff is ready to help you get started.</p>
                    <a href="tel:+15551234567" class="btn btn-outline">Call (555) 123-4567</a>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    private ContactModel contactModel = new();
    private bool showSuccess = false;

    private void HandleSubmit()
    {
        showSuccess = true;
        contactModel = new ContactModel();
    }

    public class ContactModel
    {
        public string Name { get; set; } = "";
        public string Phone { get; set; } = "";
        public string Email { get; set; } = "";
        public string Service { get; set; } = "";
        public string Message { get; set; } = "";
    }
}
